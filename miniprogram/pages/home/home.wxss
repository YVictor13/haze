page {
  width: 100%;
  height: auto;
  background-color: #fff;
  color: #000;
}

scroll-view {
  width: 100%;
}

.container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.location {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 30px;
  margin-bottom: 20px;
}

.location image {
  width: 20px;
  height: 20px;
}

.header {
  width: 100%;
  height: 260px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom right, #e6e6e6, #fff);
}
.searchInput{
  width: 100%;
  height: auto;
}
input {
  background-color: #fff;
  margin-left: 5%;
  width: 90%;
  height: 30px;
  margin-bottom: 20px;
  border-radius: 10px;
}

.sug_info {
  margin-left: 5%;
  background-color: #fff;
  width: 90%;
  height: auto;
  border-radius: 10px;
  position: fixed;
  z-index: 1;
}

.header-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.weatherImg {
  width: 100px;
  height: 100px;
  margin-right: 30px;
}

.weatherImg image {
  width: 100px;
  height: 100px;
}

.text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 30px;
}

.item image {
  width: 20px;
  height: 20px;
}

.airQuality {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 280px;
}

.title{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
}

.title image{
  width: 30px;
  height: 30px;
}

.content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 220px;
  margin: 0;
  padding: 0;
}

.ringGraph {
  width: 100%;
  height: 220px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.canvas{
  width: 100%;
  height: 220px;
  /* margin-left: 80px; */
}

.airText {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0;
  padding: 0;
  width: 40%;
  height: 220px;
}

.temperatureAndHumidity {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 230px;
}

.lineChart {
  margin-top: 10px;
  width: 100%;
  height: 230px;
}